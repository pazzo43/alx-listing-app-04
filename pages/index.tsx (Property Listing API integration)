npm install axios

import properties from "@/data/properties";

const [properties, setProperties] = useState([]);

const [loading, setLoading] = useState(true);

useEffect(() => {

const response = await axios.get("/api/properties");

setProperties(response.data);

catch (error) {
  console.error("Error fetching properties:", error);
}

finally {
  setLoading(false);
}

if (loading) {
  return <p>Loading...</p>;
}

{properties.map((property) => (
  <PropertyCard key={property.id} property={property} />
))}


// Define what a Property looks like based on the API response
interface PropertyProps {
  id: string;
  name: string;
  description: string;
  price: number;
  image: string;
  location: {
    city: string;
    country: string;
  };
  rating: number;
}

const PropertyCard = ({ property }: { property: PropertyProps }) => {
  return (
    <div className="border rounded-lg overflow-hidden shadow-sm">
      <img src={property.image} alt={property.name} className="w-full h-48 object-cover" />
      <div className="p-4">
        <h3 className="font-bold text-lg">{property.name}</h3>
        <p className="text-gray-600">{property.location.city}, {property.location.country}</p>
        <p className="mt-2 text-green-600 font-semibold">${property.price} / night</p>
        <div className="flex items-center mt-2">
          <span> {property.rating}</span>
        </div>
      </div>
    </div>
  );
};

export default PropertyCard;
